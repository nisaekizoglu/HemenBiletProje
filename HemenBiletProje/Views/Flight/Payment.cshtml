@model HemenBiletProje.Models.FlightInfo

@{
    ViewBag.Title = "Ödeme Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: "Consolas", monospace;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #f9d29d, #f68e56);
        }

        .container {
            display: flex;
            justify-content: space-between;
            padding: 30px;
            margin: 50px auto;
            width: 80%;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .flight-info, .payment-form {
            width: 48%;
            padding: 20px;
            border-radius: 8px;
            background-color: #fef9f5;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #f68e56;
            text-align: center;
        }

        .flight-details p, .form-group {
            margin: 10px 0;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .form-group input {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

        .btn-primary {
            display: inline-block;
            background-color: #f68e56;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            text-align: center;
            text-decoration: none;
            margin-top: 15px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #f45d2d;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Uçuş Bilgileri -->
        <div class="flight-info">
            <h2>Uçuş Bilgileri</h2>
            <div class="flight-details">
                <p><strong>Uçuş ID:</strong> @Model.Id</p>
                <p><strong>Havalimanı:</strong> @Model.Airport</p>
                <p><strong>Tarih:</strong> @Model.FlightDate.ToShortDateString()</p>
                <p><strong>Durum:</strong> @Model.FlightStatus</p>
                <p><strong>Kalkış Saati:</strong> @Model.Scheduled.ToString("HH:mm")</p>
            </div>
        </div>

        <!-- Ödeme Bilgileri -->
        <div class="payment-form">
            <h2>Ödeme Bilgileri</h2>
            <form method="post" action="@Url.Action("ProcessPayment", "Flight")">
                <div class="form-group">
                    <label for="CardHolder">Kart Sahibi Adı</label>
                    <input type="text" name="CardHolder" id="CardHolder" required>
                </div>
                <div class="form-group">
                    <label for="CardNumber">Kart Numarası</label>
                    <input type="text" name="CardNumber" id="CardNumber" maxlength="16" required>
                </div>
                <div class="form-group">
                    <label for="ExpiryDate">Son Kullanma Tarihi</label>
                    <input type="month" name="ExpiryDate" id="ExpiryDate" required>
                </div>
                <div class="form-group">
                    <label for="CVV">CVV</label>
                    <input type="text" name="CVV" id="CVV" maxlength="3" required>
                </div>
                <button type="submit" class="btn-primary">Ödemeyi Tamamla</button>
                <a href="@Url.Action("CancelPayment", "Flight")" class="btn-primary" style="background-color: #d9534f;">İptal Et</a>
            </form>
        </div>
    </div>
</body>
</html>
