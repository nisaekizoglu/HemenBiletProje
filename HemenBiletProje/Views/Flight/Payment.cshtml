@model HemenBiletProje.Models.FlightInfo

@{
    ViewBag.Title = "Ödeme Sayfası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* Genel Stil */
        body {
            font-family: "Consolas", monospace;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #f9d29d, #f68e56);
            color: #333;
        }

        /* Ana Konteyner */
        .payment-container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin: 50px auto;
            width: 80%;
        }

        /* Dikdörtgen Kutular */
        .info-box {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            padding: 20px;
            width: 45%;
        }

            .info-box h2 {
                color: #f68e56;
                text-align: center;
                margin-bottom: 20px;
            }

            .info-box p {
                margin: 10px 0;
                font-size: 14px;
            }

        /* Ödeme Formu */
        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
                color: #333;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

        .btn-submit {
            width: 100%;
            background-color: #f68e56;
            border: none;
            color: #fff;
            padding: 10px 15px;
            font-size: 16px;
            font-family: "Consolas", monospace;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-submit:hover {
                background-color: #f45d2d;
            }

        .btn-cancel {
            background-color: #ccc;
            color: #333;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            border-radius: 4px;
            display: inline-block;
            margin-top: 10px;
            width: 100%;
        }

            .btn-cancel:hover {
                background-color: #999;
            }
    </style>
</head>
<body>
    <div class="payment-container">
        <!-- Uçuş Bilgileri Kutusu -->
        <div class="info-box">
            <h2>Uçuş Bilgileri</h2>
            <p><strong>Nereden:</strong> @Model.From</p>
            <p><strong>Nereye:</strong> @Model.To</p>
            <p><strong>Havayolu:</strong> @Model.Airline</p>
            <p><strong>Uçuş Saati:</strong> @Model.FlightTime</p>
            <p><strong>Fiyat:</strong> @Model.Price ₺</p>
        </div>

        <!-- Ödeme Bilgileri Kutusu -->
        <div class="info-box">
            <h2>Ödeme Bilgileri</h2>
            <form method="post" action="@Url.Action("ProcessPayment", "Flight")">
                <div class="form-group">
                    <label for="CardHolder">Kart Sahibinin Adı</label>
                    <input type="text" id="CardHolder" name="CardHolder" placeholder="Ad Soyad" required>
                </div>
                <div class="form-group">
                    <label for="CardNumber">Kart Numarası</label>
                    <input type="text" id="CardNumber" name="CardNumber" placeholder="0000 0000 0000 0000" maxlength="16" required>
                </div>
                <div class="form-group">
                    <label for="ExpiryDate">Son Kullanma Tarihi</label>
                    <input type="text" id="ExpiryDate" name="ExpiryDate" placeholder="AA/YY" required>
                </div>
                <div class="form-group">
                    <label for="CVV">CVV</label>
                    <input type="text" id="CVV" name="CVV" placeholder="123" maxlength="3" required>
                </div>
                <button type="submit" class="btn-submit">Ödeme Yap</button>
            </form>
            <a href="@Url.Action("CancelPayment", "Flight")" class="btn-cancel">İptal Et</a>
        </div>
    </div>
</body>
</html>
