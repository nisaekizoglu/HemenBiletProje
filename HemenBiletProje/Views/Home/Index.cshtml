@{
    ViewBag.Title = "Uçuş Arama";
    // Örnek şehir listesi. Gerçek uygulamanızda bunu veritabanından alabilirsiniz.
    var cities = new List<string> { "İstanbul", "Ankara", "İzmir", "Antalya", "Bursa" };
}

<div class="container" style="width: 50%; margin-top: 50px;">
    <h2 style="text-align: center; color: #5a5a5a;">Uçuş Arama</h2>

    <form method="post" action="@Url.Action("Search", "Flight")">
        <div class="form-group">
            <label for="From" class="control-label">Nereden</label>
            @Html.DropDownList("From", new SelectList(cities), "-- Kalkış Şehri Seç --", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="To" class="control-label">Nereye</label>
            @Html.DropDownList("To", new SelectList(cities), "-- Varış Şehri Seç --", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="Date" class="control-label">Tarih</label>
            @Html.TextBox("Date", null, new { @class = "form-control", placeholder = "YYYY-MM-DD", type = "date" })
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 20px;">Arama Yap</button>
    </form>
</div>
