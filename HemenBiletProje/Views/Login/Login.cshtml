@model HemenBiletProje.Entities.LoginUser

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="/Content/styles.css">
    <style>
        body {
            font-family: "Consolas", monospace;
            background: linear-gradient(135deg, #f68e56, #f0c27b);
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            width: 50%;
            margin: 100px auto;
            color: #5a5a5a;
        }

        h2 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

            .form-group label {
                flex: 0 0 150px;
                text-align: right;
                margin-right: 10px;
                color: #5a5a5a;
            }

            .form-group input {
                flex: 1;
                padding: 10px;
                font-size: 14px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

        .btn-primary {
            background-color: #f68e56;
            border: none;
            font-size: 14px;
            padding: 8px 20px;
            border-radius: 4px;
            cursor: pointer;
            color: white;
        }

            .btn-primary:hover {
                background-color: #f45d2d;
            }

        a {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: #f68e56;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Giriş Yap</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="UserName">Kullanıcı Adı</label>
                <input asp-for="UserName" />
            </div>

            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input type="password" asp-for="Password" />
            </div>

            <div style="text-align: center;">
                <button type="submit" class="btn-primary">Giriş Yap</button>
            </div>

            <a href="/Register/SignUp">Hesabınız yok mu? Kaydol</a>
        </form>
    </div>
</body>
</html>
