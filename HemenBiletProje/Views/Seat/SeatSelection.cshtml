@model List<HemenBiletProje.Models.Seat>

@{
    ViewBag.Title = "Koltuk Seçimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Koltuk Seçimi</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Koltuk Numarası</th>
                    <th>Durum</th>
                    <th>Seç</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var seat in Model)
                {
                    <tr>
                        <td>@seat.SeatNumber</td>
                        <td>@(seat.IsBooked ? "Dolu" : "Boş")</td>
                        <td>
                            @if (!seat.IsBooked)
                            {
                                @Html.ActionLink("Seç", "SelectSeat", "Seat", new { seatId = seat.SeatId }, new { @class = "btn btn-primary" })
                            }
                            else
                            {
                                <span class="btn btn-secondary" disabled>Seçilemez</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            Gösterilecek koltuk bulunamadı.
        </div>
    }
</div>
